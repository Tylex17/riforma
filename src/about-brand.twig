{# index.twig #}
{% extends "layouts/layout.twig" %}

{% block page %}
	<div class="about-brand">
		<h2 class="section__title">
			О бренде
		</h2>
		<section class="about-brand__media">
			<picture>
				<source data-srcset="img/assets/about-brand-mobile.jpg, img/assets/about-brand-mobile@2x.jpg 2x" media="(max-width: 740px)">
				<source data-srcset="img/assets/about-brand.jpg, img/assets/about-brand@2x.jpg 2x">
				<img class="lazy-image" data-src="img/assets/about-brand.jpg">
			</picture>
		</section>
		<section class="why-riforma-wr">
			<h2 class="why-riforma__text">
				Riforma&nbsp;&mdash; это мебель для активных людей, открытых новому
