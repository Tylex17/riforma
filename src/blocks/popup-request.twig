{% extends "../layouts/popup-body.twig" %}
{% set popupName = 'request' %}
{% block popupConent %}
	<div class="popover-request-wr">
		<form action="" class="popover-request-form" onsubmit="o2.feedbackRequest.send(this, event)" novalidate="">
			<div class="popover-request-header">
				Вы&nbsp;можете заказать <br />
				обратный звонок
			</div>
			<div class="popover-request-label">
				Пожалуйста, заполните краткую информационную форму, и&nbsp;наши сотрудники свяжутся с&nbsp;вами.
			</div>
			<div class="popover-request-input__inputs">
				<label class="input-wr popover-request-input">
					<input type="text" class="input _required" value="" onkeyup="this.setAttribute('value', this.value);" onchange="this.setAttribute('value', this.value);">
					<div class="input__label">Имя*</div>
				</label>
				<label class="input-wr popover-request-input">
					<input type="tel" class="input _required _phone-mask" value="" onkeyup="this.setAttribute('value', this.value);" onchange="this.setAttribute('value', this.value);">
					<div class="input__label">Телефон*</div>
				</label>
				<button class="btn btn_accent btn_full popover-request-btn" type="submit">Заказать звонок</button>
			</div>
		</form>
		<div class="popover-request-success">
			<div class="popover-request-success__top">
				<div class="popover-request-success__header">
					Ваша заявка принята
				</div>
				<div class="popover-request-success__descr">
					Наш консультант перезвонит <br />
					Вам в&nbsp;течении 10&nbsp;минут.
				</div>
			</div>
			<!-- <button class="btn btn_full popover-request-btn popover-request-btn_skin" onclick="o2.popover.close()">Продолжить покупки</button> -->
		</div>
	</div>
{% endblock %}