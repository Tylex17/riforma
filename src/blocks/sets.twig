{% block sets %}
	<div class="set">
		<div class="set__title">{{ name }}</div>
		<div class="set__wrapper">
			<div class="set__left">
				<a href="#" class="set__item">
					<div class="set__item-img">
						<picture>
							<source data-srcset="img/assets/large-card-phone.jpg, img/assets/large-card-phone@2x.jpg 2x" media="(max-width: 740px)">
							<source data-srcset="img/assets/large-card-tablet.jpg, img/assets/large-card-tablet@2x.jpg 2x" media="(max-width: 950px)">
							<source data-srcset="img/assets/complect-card.jpg, img/assets/complect-card@2x.jpg 2x">
							<img class="lazy-image"data-src="img/assets/complect-card.jpg" alt="">
						</picture>
					</div>
					<div class="set__item-bot">
						<div class="set__item-info">
							<div class="set__item-name">Денвер</div>
							<div class="set__item-type">Прямой диван</div>
							<div class="set__item-descr">Сиреневый велюр Triniti с грязеотталкивающей пропиткой</div>
						</div>
						<div class="set__item-prices">
							<div class="set__item-current-price">35990₽</div>
							<div class="set__item-old-price">39990₽</div>
						</div>
					</div>
				</a>
			</div>
			<div class="set__right">
				{% for i in 1..cardsCount %}
					<a href="#" class="set__item {% if cardsCount > 1%}set__item_small{% endif %}">
						<div class="set__item-img">
							<picture>
								<source data-srcset="img/assets/large-card-phone.jpg, img/assets/large-card-phone@2x.jpg 2x" media="(max-width: 740px)">
								<source data-srcset="img/assets/large-card-tablet.jpg, img/assets/large-card-tablet@2x.jpg 2x" media="(max-width: 950px)">
								<source data-srcset="img/assets/complect-card-small.jpg, img/assets/complect-card-small@2x.jpg 2x">
								<img class="lazy-image"data-src="img/assets/complect-card-small.jpg" alt="">
							</picture>
						</div>
						<div class="set__item-bot">
							<div class="set__item-info">
								<div class="set__item-name">Vincent</div>
								<div class="set__item-type">Постер настенный</div>
								<div class="set__item-descr">Велюр/Микровелюр</div>
							</div>
							<div class="set__item-prices">
								<div class="set__item-current-price">35990₽</div>
								<div class="set__item-old-price">39990₽</div>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
			<div class="set__button-wr">
				<button class="button set__button" onclick="o2.shops.complectsButtonClick(this)">Купить комплект за 35590₽</button>
			</div>
		</div>
	</div>
{% endblock %}